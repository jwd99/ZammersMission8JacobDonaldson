@model checkoutInfo

<h3>Checkout!! WOW</h3>
<form method="post" asp-controller="Checkout" asp-action="Checkout">
    <div asp-validation-summary="All"></div>
    <h4>Shippers Name</h4>
    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <h4>Address</h4>
    <div class="form-group">
        <label asp-for="Address1">Address Line One:</label>
        <input asp-for="Address1" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address2">Address Line Two:</label>
        <input asp-for="Address2" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Address3">Address Line Three:</label>
        <input asp-for="Address3" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="City">City:</label>
        <input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="State">State:</label>
        <input asp-for="State" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ZipCode">Zip:</label>
        <input asp-for="ZipCode" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Country">Country:</label>
        <input asp-for="Country" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Notes">Shipping Notes:</label>
        <textarea asp-for="Notes" class="form-text"></textarea>
    </div>

    <div class="float-end">
       <input class="btn btn-primary" type="submit" value="Finish">
    </div>

</form>

