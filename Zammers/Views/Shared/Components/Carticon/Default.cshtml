@{
}
@model Basket

@*Zammers.Pages.bookcartModel*@ 

@*adds in icon with cart quantity and total on the header bar below the nav bar*@
<div class="">
     @if (Model.Items.Count() > 0)
            {
         <small class="navbar-text text-white">
             <u>Your cart:</u>
             @Model.Items.Sum(x=> x.Quantity) item(s)
             @Model.CalcTotal().ToString("c")
         </small>
            }
     <a class="btn btn-sm btn-secondary navbar-btn" asp-page="/bookcart" asp-route-returnurl="@ViewContext.HttpContext.Request.PathAndQuery()"><i class="fa fa-shopping-cart"></i></a>

             </div>