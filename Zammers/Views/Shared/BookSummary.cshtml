@{
}
@model Book


<div class="card card-outline-primary m-1 p-1">
        <div class="bg-faded p-1">
            <h4>
                @Model.Title
                <span class="badge badge-pill badge-primary" style="float:inline-end">
                    <small>@Model.Price.ToString("c") </small>
                </span>
            </h4>
        </div>
        <div class="card-text p-xl-0">Classification: @Model.Classification</div>
        <div class="card-text p-xl-0">Author: @Model.Author</div>
        <div class="card-text p-xl-0">Publisher: @Model.Publisher</div>
        <div class="card-text p-xl-0">ISBN: @Model.Isbn</div>
        <div class="card-text p-xl-0">Genre: @Model.Category</div>
        <div class="card-text p-xl-0">Pages: @Model.PageCount</div>
</div>